<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:padding="16dp"
    android:background="#F5F5F5">

    <!--header part -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cross PlatForm FIle Transfer"
            android:textStyle="bold"
            android:textSize="18dp"
            android:layout_marginTop="20dp"/>

        <Spinner
            android:id="@+id/spinnerDevices"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="32dp"
            android:background="@drawable/card"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:spinnerMode="dropdown" />

        <Button
            android:id="@+id/btn_search"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Search Devices"
            android:onClick="btn_search_click"
            android:background="@drawable/card"
            android:padding="12dp" />

        <!-- Main body buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:orientation="vertical"
            android:background="@drawable/card"
            android:padding="16dp"
            android:elevation="4dp">

            <Button
                android:id="@+id/btnSendFile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Send File/Folder"
                android:layout_marginBottom="12dp"
                android:onClick="sendFile"/>

            <Button
                android:id="@+id/btn_broadcast_respons"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Receive File"
                android:layout_marginBottom="12dp" />

            <Button
                android:id="@+id/btn_nanoHttpd_on"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Turn On Server"
                android:layout_marginBottom="12dp" />

            <Button
                android:id="@+id/btn_nanoHttpd_off"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Turn Off Server" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:orientation="horizontal"
            android:padding="8dp"
            android:gravity="center"
            android:background="@drawable/card">

            <ProgressBar
                android:id="@+id/progressBar"
                android:layout_width="match_parent"
                android:layout_height="8dp"
                android:indeterminate="false"
                android:progress="0"
                android:max="100"
                android:progressDrawable="@drawable/progress_bar"
                style="?android:attr/progressBarStyleHorizontal" />
        </LinearLayout>

    </LinearLayout>
</ScrollView>
